---
import { ViewTransitions } from "astro:transitions";
import Navbar from "@/components/Navbar.astro";
import NavbarMobile from "@/components/Navbar-Mobile.astro";
import Footer from "@/components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "@/constants/index";
const { title } = Astro.props;

interface Props {
  title?: string;
}
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={SITE_DESCRIPTION} />
    <ViewTransitions />
    <title>{SITE_TITLE} - {title}</title>
  </head>
  <body>
    <NavbarMobile />
    <div class="max-md:hidden">
      <Navbar />
    </div>
    <section class="container mx-auto max-w-screen-xl mt-10 px-8">
      <slot />
    </section>
    <Footer />
    <script is:inline defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"
    ></script>
  </body>
</html>
