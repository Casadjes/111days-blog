---
import MainLayout from "@/layouts/MainLayout.astro";
import { Image } from "astro:assets";
import errorImage from "@/images/error-404.png";
---

<MainLayout title="404 - Page Not Found">
  <div class="flex flex-col items-center justify-center gap-7">
    <Image
      src={errorImage}
      alt="404 - Page Not Found image"
      class="mt-10"
      height={250}
      width={250}
    />
    <h1 class="text-5xl">Page Not Found</h1>
    <p class="text-2xl">Sorry, we could not find the page you were looking for.</p>
    <a href="/" class="inline-block bg-gray-100 p-2 mb-6 hover:bg-indigo-500 hover:text-white"
      >Go Back Home</a
    >
  </div>
</MainLayout>
